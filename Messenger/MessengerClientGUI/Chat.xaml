        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="432" Width="704">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="53" Margin="241,335,0,0" TextWrapping="Wrap" Text="Тут типо что то пишем......."  
                  BorderThickness="4" VerticalAlignment="Top" Width="341"/>
        
        <TextBox Height="275" HorizontalAlignment="Left" Margin="241,43,0,0" Name="chatBox" VerticalAlignment="Top" Width="427" IsReadOnly="True" VerticalScrollBarVisibility="Visible" />
